
 <div id="postList" class="widget-box">
    <h3>Recent Posts</h3>   
     <div data-bind="foreach: Posts">
        <div class="post-box">
            <a data-bind="visible: MainImageThumbnailUrl.length > 0, attr: { href: PostUrl }">
                <img data-bind="attr:{ src: MainImageThumbnailUrl }" />
            </a>
            <h4>
            <a class="title-link" data-bind="attr: { href: PostUrl }">
                <span data-bind="text: Title"></span>
            </a>
            </h4>
            <p data-bind="css: {'no-image': MainImageThumbnailUrl.length == 0}">Posted by <span data-bind="text: Author"></span></p>
        </div>
    </div>
</div>

