@using DataRepository.Models
@model Blog.Models.BlogView.BlogEntryVM
@{
    ViewBag.Title = Model.PageTitle;
}

<div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-8">

        <!-- Blog Post -->
        <!-- Title -->
        <h1>@Model.Title</h1>

        <!-- Author -->
        <p class="lead">
            by <a href="#">@Model.Author</a>
        </p>
        <hr />

        <!-- Date/Time -->
        <p>
            <span class="glyphicon glyphicon-time"></span> Posted on @Model.DateTimePosted
            @if (Model.Tags.Count > 0)
            {
                foreach (var tag in Model.Tags)
                {
                    <span class="label label-primary">@tag.TagValue</span>
                }
            }
        </p>
        <hr />

        <!-- Preview Image -->
        <img class="img-responsive img-main" src="@Model.MainImageUrl" alt="" />

        <hr />

        <!-- Post Content -->
        <p>@Html.Raw(Model.BlogText)</p>
        <hr />

        <!-- Blog Comments -->
        <div class="well">
            <div class="fb-comments" data-href="@Request.Url.AbsoluteUri" data-numposts="5" data-colorscheme="light"></div>
        </div>


    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">
        @{Html.RenderPartial("~/Views/Blog/_Twitter.cshtml", (TwitterWidget)ViewBag.UserData.TwitterFeed);}
    </div>

</div>


