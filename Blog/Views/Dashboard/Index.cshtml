@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row" id="blogtable">
        <!-- Blog Post Content Column -->
        <div class="col-lg-12 col-md-12">

            <!-- Page Header -->
            <header class="entry-header">
                <div class="post-heading">
                    <h1>Edit Blog Posts</h1>
                </div>
            </header>
            <span id="loading" data-bind="visible: IsLoading"><img src="img/ajax-loader.gif" /></span>
            <div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Post List
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive blog-table">
                            <div class="row form-inline">
                                <div class="col-sm-6">
                                    <label>
                                        <select class="form-control input-sm" data-bind="value: ItemsPerPage, event: { change: ItemCountChanged }">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                        </select>
                                        records per page
                                    </label>
                                </div>
                                <div class="col-sm-6">
                                    <div class="search"><label>Search: <input type="search" class="form-control input-sm" /> </label></div>
                                </div>
                            </div>
                            <table class="table table-striped table-bordered no-footer table-hover">
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" /></th>
                                        <th>Title</th>
                                        <th>Author</th>
                                        <th>Category</th>
                                        <th>Date Posted</th>
                                        <th>Tags</th>
                                    </tr>
                                </thead>
                                <tbody data-bind="foreach: Posts">
                                    <tr>
                                        <td>
                                            <input type="checkbox" />
                                        </td>
                                        <td>
                                            <a data-bind="attr: { href: EditPostUrl }"><span data-bind="text: Title"></span></a>
                                        </td>
                                        <td data-bind="text: Author"></td>
                                        <td data-bind="text: Category"></td>
                                        <td data-bind="text: DatePosted"></td>
                                        <td data-bind="text: TagList"></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div>Showing <span data-bind="text: CurrentStartIndex"></span> to <span data-bind="text: CurrentEndIndex"></span> of <span data-bind="text: PostCount"></span></div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="datatable">
                                        <ul class="pagination">
                                            <li class="previous">
                                                <a data-bind="click: PreviousPage">Previous</a>
                                            </li>
                                            
                                            
                                            <li class="next">
                                                <a data-bind="click: NextPage">Next</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/dashboard")
}






